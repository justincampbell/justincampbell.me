<h1>Posts</h1>

<ul>
  <% @posts.each do |post| %>
    <li>
      <%= link_to post.title, [:admin, post] %>
      <%= time_ago_in_words(post.published_at) %>
      <%= post.published_at > Time.now ? "from now" : "ago" %>
    </li>
  <% end %>
</ul>

<br />

<%= link_to 'New Post', new_admin_post_path %>
